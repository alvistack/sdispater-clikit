[flake8]
max-line-length = 88
ignore = E501, E203, W503
per-file-ignores =
    __init__.py:F401
    tests/ui/components/test_exception_trace.py:W291
    tests/ui/help/test_application_help.py:W293
    tests/ui/help/test_command_help.py:W293
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
